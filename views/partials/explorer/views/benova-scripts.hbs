<script>
    // Função para executar o código quando o elemento for alterado
function executarCodigo() {
  // Selecione o elemento
  const $elemento = $('.mshops-recommendations-wrapper .grid-container:nth-child(2) .ui-item__wrapper:first-child a');

  // Verifique se o elemento existe
  if ($elemento.length) {
    // Defina o atributo href do link
    $elemento.attr('href', '/nossos-produtos');

    // Substitua o elemento pelo link
    $elemento.replaceWith($elemento);

    // Parar de observar as alterações quando o código for executado
    observer.disconnect();
  }
}

// Selecione o elemento pai do elemento que você deseja observar
const elementoPai = $('.mshops-recommendations-wrapper .grid-container:nth-child(2)')[0];

// Crie um MutationObserver para observar as alterações no DOM
const observer = new MutationObserver(function(mutationsList) {
  // Verifique todas as mutações ocorridas
  for (let mutation of mutationsList) {
    // Verifique se o tipo de mutação é a adição de nós
    if (mutation.type === 'childList') {
      // Execute o código quando o elemento for alterado
      executarCodigo();
    }
  }
});

// Configure as opções do MutationObserver
const observerOptions = {
  childList: true, // Observar alterações nos nós filhos
  subtree: true // Observar alterações em toda a subárvore
};

// Comece a observar as alterações no elemento pai
observer.observe(elementoPai, observerOptions);

</script>