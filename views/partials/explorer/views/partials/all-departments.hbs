  }

  .side-menu__title {
    font: normal normal bold 18px/15px 'Open Sans';
    color: #FFFFFF;
  }

  .side-menu__close {
    display: flex;
    align-items: baseline;
    gap: 5px;
    cursor: pointer;
    font: normal normal 300 13px/15px 'Open Sans';
  }

  .side-menu__close--text {
    font: normal normal 300 13px/15px 'Open Sans';
    text-decoration: underline;
  }

  #side-menu {
    position: fixed;
    top: 0;
    left: -100%;
    width: 365px;
    height: 100%;
    background-color: #fff;
    transition: all 0.3s;
    z-index: 999;
  }

  @media screen and (max-width: 1025px) {
