<script>
  const openMenuButtons = document.querySelectorAll(".open-menu");
  const sideMenu = document.querySelector("#side-menu");
  const close = document.querySelector("#side-menu__close");
  const background = document.querySelector("#overlay");
  const menuItems = document.querySelectorAll(".category-items__item");
  const subMenuItem = document.querySelectorAll(".sub-menu__item");
  const submenuHeaders = document.querySelectorAll(".sub-menu__header--child");
  const submenuGrandHeaders = document.querySelectorAll(".sub-menu__header--grandchild");
  const categoryHrefSelector = ".category-items__href";

  for (var i = 0; i < openMenuButtons.length; i++) {
    openMenuButtons[i].onclick = function () {
      sideMenu.classList.toggle("open");
      background.style.display = "block"
    };
  }

  close.addEventListener("click", () => {
    sideMenu.classList.toggle("open");
    background.style.display = "none"
  });

  for (let i = 0; i < menuItems.length; i++) {
    const categoryHref = menuItems[i].querySelector(categoryHrefSelector);
    if (categoryHref) {
      categoryHref.addEventListener("click", () => {
        const submenu = menuItems[i].querySelector(".sub-menu");
        if (submenu) {
          submenu.classList.add("open");
        }
      });
    }
  }

  for (let i = 0; i < subMenuItem.length; i++) {
    const categoryGrandHref = subMenuItem[i].querySelector(categoryHrefSelector);
    if (categoryGrandHref) {
      categoryGrandHref.addEventListener("click", () => {
        const submenuGrand = subMenuItem[i].querySelector(".sub-menu__grandchild");
        if (submenuGrand) {
          submenuGrand.classList.add("open");
        }
      });
    }
  }

  for (let i = 0; i < submenuHeaders.length; i++) {
    submenuHeaders[i].addEventListener("click", () => {
      const parentSubmenu = submenuHeaders[i].closest(".sub-menu");
      if (parentSubmenu) {
        parentSubmenu.classList.remove("open");
      }
    });
  }

  for (let i = 0; i < submenuGrandHeaders.length; i++) {
    submenuGrandHeaders[i].addEventListener("click", () => {
      const parentSubmenuGrand = submenuGrandHeaders[i].closest(".sub-menu__grandchild");
      if (parentSubmenuGrand) {
        parentSubmenuGrand.classList.remove("open");
      }
    });
  }
</script>